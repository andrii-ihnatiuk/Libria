@using Libria.ViewModels
@model List<Book>
@{
	List<int>? wishIds = null;
	if (ViewData["wishIds"] != null)
		wishIds = ViewData["wishIds"] as List<int>;
	bool wished = false;
}
<section class="slider">
	<div id="autoWidth" class="hidden">
		@for (var i = 0; i < 10; i++)
			@foreach (var book in Model)
			{
				wished = wishIds != null && wishIds.Contains(book.BookId) ? true : false;
				<partial name="_BookCardPartial" model=@(new CardDisplayViewModel { Book = book, Wished = wished })></partial>
			}
	</div>
	<div class="d-flex justify-content-end mt-1">
		<button id="goToPrevSlide" class="btn me-2" style="width:70px"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"><path d="M15.293 3.293 6.586 12l8.707 8.707 1.414-1.414L9.414 12l7.293-7.293-1.414-1.414z" /></svg></button>
		<button id="goToNextSlide" class="btn ms-2" style="width:70px"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"><path d="M7.293 4.707 14.586 12l-7.293 7.293 1.414 1.414L17.414 12 8.707 3.293 7.293 4.707z" /></svg></button>
	</div>
</section>
