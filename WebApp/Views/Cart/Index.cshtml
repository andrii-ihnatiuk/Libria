@{
	ViewData["Title"] = "Кошик";
}

<h2 class="mb-4">Кошик</h2>

<div class="d-flex shadow justify-content-between mt-4">
	<div class="" style="height=40rem; width=20rem;">
		<img src="#" alt="product img">
	</div>
	<div class="d-flex flex-column align-items-center justify-content-center p-3">
		<span class="">Назва</span>
		<span class="">Автор</span>
		<span class="">Вартість</span>
	</div>
