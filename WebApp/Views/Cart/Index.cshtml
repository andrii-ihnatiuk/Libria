@using Libria.ViewModels.Cart

@model List<CartItemViewModel>
@{
	ViewData["Title"] = "Кошик";
}

<div class="cart-container">
	<h2 class="my-5">Кошик</h2>
	@foreach (var item in Model)
	{
		<partial name="_CartItemPartial" model=@item></partial>
	}

	<div class="container pt-1 pb-4" style="position: absolute; bottom: 60px; left: 0; right: 0; overflow: hidden;">
		<div class="d-flex p-3 shadow justify-content-between align-items-center" style="border-radius: 5px;">
			<div class="d-flex flex-column justify-content-center align-items-start">
				<h3>До сплати:</h3>
				<div class="lead">
					<span class="totalCartPrice">@ViewData["TotalPrice"]</span>
					<span>грн.</span>
				</div>
			</div>
			<div class="d-flex">
				<form method="POST" asp-controller="Cart" asp-action="Clear">
					<button class="btn btn-outline-danger me-2 p-3" type="submit">Очистити кошик</button>
				</form>
				<button class="btn btn-primary p-3" type="button">Замовлення</button>
			</div>
		</div>
	</div>
</div>

