@model Libria.ViewModels.ResetPasswordViewModel

@{
	ViewData["Title"] = "Відновлення доступу";
}

<div class="row justify-content-center py-5">
	<div class="col-lg-4">
		<h2 class="text-center mb-4">Відновлення доступу</h2>
		<form method="POST" asp-controller="Account" asp-action="ResetPassword" class="needs-validation" novalidate>
			<div class="form-group mb-4">
				<label asp-for="Email" class="mb-1"></label>
				<input asp-for="Email" class="form-control @(ViewBag.EmailInvalid == true ? "is-invalid" : "")" placeholder="Введіть email адресу">
				<span asp-validation-for="Email" class="invalid-feedback"></span>
			</div>
			<div class="form-group mb-4">
				<button type="submit" class="btn btn-primary w-100">Надіслати</button>
			</div>
			<div asp-validation-summary="ModelOnly" class="invalid-feedback"></div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}