@using Libria.Data;
@model Libria.ViewModels.ForgotPasswordViewModel

@{
	ViewData["Title"] = "Відновлення доступу";
}

<div class="row justify-content-center py-5">
	<div class="col-lg-4">
		<h2 class="text-center mb-4">Відновлення доступу</h2>

		@if (Model.RequestProcessed == true)
		{
			<div class="alert alert-success mt-5 mb-4" role="alert">
				<h4 class="alert-heading">Заявку прийнято!</h4>
				<p>Якщо ви зареєстровані у нашій системі, вам буде надіслано email повідомлення.</p>
				<hr>
				<p class="mb-0">Для відновлення доступу перейдіть за посиланням у листі.</p>
			</div>
		}
		else
		{
			<p class="lead text-center">
				Вкажіть email адресу з якою ви зареєструвалися раніше і ми надішлемо інструкції щодо зміни пароля.
			</p>
			<form method="post" asp-controller="Account" asp-action="ForgotPassword" class="needs-validation" novalidate>
				<div class="form-group mb-4">
					<label asp-for="Email" class="mb-1"></label>
					<input asp-for="Email" class="form-control placeholder="Введіть email адресу">
					<span asp-validation-for="Email" class="invalid-feedback"></span>
				</div>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group mb-4">
					<button type="submit" class="btn btn-primary w-100">Надіслати</button>
				</div>
			</form>
		}
		<div class="text-center">
			<a class="link-dark fw-bold" asp-controller="Account" asp-action="Login">Назад до входу</a>
		</div>
	</div>
</div>

@if (Model.RequestProcessed != true)
{
	@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	}
}