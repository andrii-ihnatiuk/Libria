@using Libria.Areas.Admin.ViewModels;

@model DashboardCategoriesViewModel;

<partial name="_SideBarPartial" model="@Model.SidebarViewModel"></partial>

<div class="w-100 p-3">
	<div class="p-3 d-flex flex-wrap justify-content-between align-items-start">
		<h2>Категорії</h2>
		<a asp-area="" asp-controller="Home" asp-action="Index">В магазин</a>
	</div>

	<form method="get" asp-controller="Dashboard" asp-action="Categories">
		<div class="d-flex mt-5">
			<div class="me-4">
				<input type="search" name="q" placeholder="Пошук категорій" />
			</div>
			<button type="submit" class="btn btn-outline-primary">Шукати</button>
		</div>
	</form>

	<div class="d-flex flex-wrap w-100 mt-5">
		@foreach (var category in Model.Categories)
		{
			<div class="flex-grow-1 p-3" style="flex-basis:20%;height:400px;">
				<div class="card shadow-sm text-dark bg-light h-100">
					<div class="card-body d-flex justify-content-center align-items-center">
						<h2 class="card-title m-0 text-center">@category.Name</h2>
					</div>
					<div class="card-header d-flex shadow-sm text-center">
						<a asp-controller="Dashboard" asp-action="Categories"></a>
					</div>
				</div>
			</div>
		}
	</div>

</div>
