@using Libria.Areas.Admin.Models;
@model DashboardViewModel;

<partial name="_SideBarPartial" model="@Model"></partial>

<div class="w-100 p-3">
	<div class="p-3 d-flex flex-wrap justify-content-between align-items-start">
		<h2>Адміністративна панель магазину</h2>
		<a asp-area="" asp-controller="Home" asp-action="Index">В магазин</a>
	</div>

	<div class="d-flex flex-wrap w-100 mt-5">
		<div class="flex-grow-1 p-3" style="flex-basis:33%;height:400px;">
			<div class="card shadow-sm text-dark bg-light h-100">
				<div class="card-body d-flex justify-content-center align-items-center">
					<h2 class="card-title m-0 text-center">@ViewData["usersCount"]</h2>
				</div>
				<div class="card-header shadow-sm text-center">Кількість користувачів</div>
			</div>
		</div>

		<div class="flex-grow-1 p-3" style="flex-basis:33%;height:400px;">
			<div class="card shadow-sm text-dark bg-light h-100">
				<div class="card-body d-flex justify-content-center align-items-center">
					<h2 class="card-title m-0 text-center">@ViewData["newOrdersCount"]</h2>
				</div>
				<div class="card-header shadow-sm text-center">Нових замовлень</div>
			</div>
		</div>

		<div class="flex-grow-1 p-3" style="flex-basis:33%;height:400px;">
			<div class="card shadow-sm text-dark bg-light h-100">
				<div class="card-body d-flex justify-content-center align-items-center">
					<h2 class="card-title m-0 text-center">@ViewData["newOrdersPrice"]</h2>
				</div>
				<div class="card-header shadow-sm text-center">Сума нових замовлень</div>
			</div>
		</div>
	</div>

</div>